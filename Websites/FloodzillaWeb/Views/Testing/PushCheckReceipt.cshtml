@model FloodzillaWeb.Controllers.PushCheckReceiptModel

@{ 
    Layout = "_AdminLayout";
    ViewData["Title"] = "Check Receipt";
}

<div class="row">
  <div class="col-sm">
    <div class="card">
      <div class="card-header">Check Push Receipt</div>
      <div class="card-body">
        <div style="padding: 15px;">
          This is a helper page to allow you to directly look up a Push Notification Receipt.
        </div>
        <br />
        <div style="width:500px;">
          <form asp-action="PushCheckReceipt" method="post" class="form-horizontal" autocomplete="off">
            <div style="padding: 15px;"><span style="color: red; text-weight: bold;">@ViewBag.CheckError</span></div>
            <div style="padding: 15px;"><span style="text-weight: bold;">@ViewBag.CheckResult</span></div>
            <div class="form-group row">
              <div class="col-md-2 control-label">
                <label class="control-label">Ticket ID:</label>
              </div>
              <div class="col-md-10">
                <input asp-for="TicketId" class="form-control" placeholder="xxxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx" />
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-10 offset-2">
                <button id="btnCheck" type="submit" class="btn btn-primary">Check</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div

