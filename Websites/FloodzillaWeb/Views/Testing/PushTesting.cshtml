@model FloodzillaWeb.Controllers.PushTestModel

@{ 
    Layout = "_AdminLayout";
    ViewData["Title"] = "Push Testing";
}

<div class="row">
  <div class="col-sm">
    <div class="card">
      <div class="card-header">Push Testing</div>
      <div class="card-body">
        <div style="padding: 15px;">
          This will send the given payload to every token associated with the given user.
          This sends REAL PUSH NOTIFICATIONS to REAL USERS.  Be careful.
        </div>
        <br />
        <div style="width:500px;">
          <form asp-action="PushTesting" method="post" class="form-horizontal" autocomplete="off">
            <div style="padding: 15px;"><span style="color: red; text-weight: bold;">@ViewBag.PushTestError</span></div>
            <div style="padding: 15px;"><span style="text-weight: bold;">@ViewBag.PushTestResult</span></div>
            <div class="form-group row">
              <div class="col-md-2 control-label">
                <label class="control-label">Email address:</label>
              </div>
              <div class="col-md-10">
                <input asp-for="Email" class="form-control" placeholder="foo@bar.baz" />
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-2 control-label">
                <label class="control-label">Title:</label>
              </div>
              <div class="col-md-10">
                <input asp-for="Title" class="form-control" placeholder="oh no a flood" />
              </div>
            </div>
            <div class="form-group row">
              <div class="col-md-2 control-label">
                <label class="control-label">Subtitle:</label>
              </div>
              <div class="col-md-10">
                <input asp-for="Subtitle" class="form-control" placeholder="electric boogaloo" />
              </div>
            </div>
            <div class="form-group row">
              <div class="col-md-2 control-label">
                <label class="control-label">Body:</label>
              </div>
              <div class="col-md-10">
                <input asp-for="Body" class="form-control" placeholder="USGS-531 is at 300000cfs" />
              </div>
            </div>
            <div class="form-group row">
              <div class="col-md-2 control-label">
                <label class="control-label">Data:</label>
              </div>
              <div class="col-md-10">
                <input asp-for="Data" class="form-control" placeholder="{ maybe some json }" />
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-10 offset-2">
                <button id="btnSend" type="submit" class="btn btn-primary">Push it real good</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div

