@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Gage Statistics";
}

<style>
    div.barbox {
        position: relative;
        white-space: nowrap;
        width: 100%;
    }

    div.bars {
        position: absolute;
        top: -2px;
        height: 24px;
        width: 100%;
    }

    div.barleft {
        position: absolute;
        height: 22px;
        background-color: #cbdeeb
    }

    div.barval {
        position: relative;
        left: 5px;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
        <div class="card card-info">
            <div class="card-header">
                <div class="card-title">Gage Statistics by Location</div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-5 col-lg-5 col-sm-5 col-xs-12">
        <div class="form-group">
            <label for="LocationIdSelect">Sensor Location:</label><br />
            <select id="LocationIdSelect" style="display:inline" name="LocationId" class="form-control"
                asp-items="@ViewBag.Locations"></select>
        </div>
    </div>
</div>
<div class="row" id="loading" style="display:none;">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
        Loading...
    </div>
</div>
<div class="row" id="results" style="display:none;">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
        <table style="width:100%" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Avg Battery</th>
                    <th>Percent Received</th>
                    <th># Filtered</th>
                    <th># Deleted</th>
                    <th>Avg Rssi</th>
                    <th>Update Interval (min)</th>
                    <th>Interval Changed?</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
<div class="row" id="noData" style="display:none;">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
        No stats found
    </div>
</div>

@section Scripts {
    <script>

        var pageSize = 100;

        function renderBattery(data) {
            if (data == undefined || data == 0) {
                return '';
            }
            if (!data.averageBatteryMillivolts && !data.averageBatteryPercent) {
                return "n/a";
            }
            if (data.averageBatteryMillivolts && !data.averageBatteryPercent) {
                return `<span>${(data.averageBatteryMillivolts / 1000.0).toFixed(3)}V`;
            }
            if (data.averageBatteryPercent && !data.averageBatteryMillivolts) {
                return `<span>${data.averageBatteryPercent.toFixed(2)}%`;
            }
            return `<span data-toggle="tooltip" title="${(data.averageBatteryMillivolts / 1000.0).toFixed(3) + "V"}>${data.averageBatteryPercent.toFixed(2)}%</span>`;
        }

        var dataTable;
        function InitTable() {
            dataTable = $("table").DataTable({
                retrieve: true,
                paging: false,
                searching: false,
                ordering: false,
                language: { emptyTable: "...", infoEmpty: "", zeroRecords: "No data" },
                dom: 'lBfrtip',
                buttons: ['copy', 'excel', 'pdf'],
                createdRow: function (row, data, dataIndex) {
                    if (data.sensorUpdateIntervalChanged) {
                        $(row).addClass('table-inactive');
                    }
                    if (data.percentReadingsReceived === 0) {
                        $(row).addClass('table-danger');
                    }
                },
                columns: [
                    { "data": "date", "orderable": true, render: function (data, type, row) { data = data.replace('Z', ''); return moment(data).format("MM/DD/YYYY"); } },
                    { "data": renderBattery },
                    { "data": "percentReadingsReceived", "orderable": true, render: function (data, type, row) { return data ? data.toFixed(2) + '%' : "n/a"; } },
                    { "data": "countReadingsFiltered", "orderable": true, render: function (data, type, row) { return (data === null || data === undefined) ? "-" : data } },
                    { "data": "countReadingsDeleted", "orderable": true, render: function (data, type, row) { return (data === null || data === undefined) ? "-" : data } },
                    { "data": "averageRssi", "orderable": true, render: function (data, type, row) { return data.toFixed(2); } },
                    { "data": "sensorUpdateInterval", "orderable": true },
                    { "data": "sensorUpdateIntervalChanged", "orderable": true },
                ]
            });
            $('table').on('xhr.dt', function (e, settings, json, xhr) {
                $('#loading').hide();
                if (xhr.status == 200 && xhr.responseJSON.data.length > 0) {
                    $('#results').show();
                    $('#noData').hide();
                }
                else {
                    $('#results').hide();
                    $('#noData').show();
                }
            });
        }
        function UpdateTable(locationId) {
            if (locationId == 0 || isNaN(locationId)) {
                return;
            }
            var tzOffset = -(new Date().getTimezoneOffset());
            dataTable.ajax.url("/Reports/GetStatsForLocation?tzOffset=" + tzOffset + "&locationId=" + locationId);
            $('#loading').show();
            $('#results').hide();
            $('#noData').hide();
            dataTable.ajax.reload();
        }

        $(function () {
            var curLocation = parseInt($("#LocationIdSelect").children("option:selected").val());
            InitTable();
            $("#LocationIdSelect").change(function () {
                window.location.href = "/Reports/Stats/?locationId=" + $(this).children("option:selected").val();
            });

            if (curLocation != 0) {
                UpdateTable(curLocation);
            }
        });
    </script>
}