@model FloodzillaWeb.ViewModels.Account.ForgotPasswordViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Forgot your password?";
}

<partial name="_showMessage" />
<form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-horizontal">

  <p>Enter your email below and we'll send you a link to reset your password.</p>
  <div asp-validation-summary="All" class="text-danger"></div>

  <div class="form-group row">
    <div class="col-md-2 control-label">
      <label asp-for="Email" class="control-label">Email:</label>
    </div>
    <div class="col-md-10">
      <input asp-for="Email" class="form-control" />
      <span asp-validation-for="Email" class="text-danger"></span>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-2 control-label">
    </div>
    <div class="col-md-10">
      <div class="g-recaptcha" data-sitekey="@ViewBag.GoogleCaptchaSiteKey"></div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>
@section Scripts {
    <script src='https://www.google.com/recaptcha/api.js'></script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
